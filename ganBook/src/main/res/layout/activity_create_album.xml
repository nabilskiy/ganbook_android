<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_layout" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/app_bar">

            <EditText
                android:id="@+id/add_album_name"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_bg"
                android:hint="@string/album_name_hint"
                android:inputType="text"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/add_album_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="209dp"
            android:background="@drawable/green_selector"
            android:text="@string/add_album_sidemenu"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size" />

      <EditText
            android:id="@+id/add_album_description"
            android:layout_width="match_parent"
            android:gravity="top|left"
            android:lines="8"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edit_bg"
            android:hint="@string/album_description_hint"
            android:inputType="textMultiLine"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:maxLines="10"
            android:scrollbars="vertical"
           />
    </RelativeLayout>
</RelativeLayout>