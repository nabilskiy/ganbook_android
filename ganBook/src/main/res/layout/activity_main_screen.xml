<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        android:id="@+id/toolbar_root"
        layout="@layout/app_bar_layout" />


    <androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
        android:layoutDirection="ltr"
    tools:context="com.ganbook.activities.MainActivity"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/drawer_view"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#8F8E93"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/drawer_parent_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clickable="false"
            android:background="@drawable/sidebar_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sidebar_bg_logo"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/sidebar_bg_logo" />


            <com.ganbook.ui.AutoResizeTextView
                android:id="@+id/drawer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sidebar_bg_logo"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-32dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Sofia"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp" />

            <com.ganbook.ui.AutoResizeTextView
                android:id="@+id/drawer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_below="@+id/drawer_type"
                android:layout_alignStart="@+id/drawer_type"
                android:singleLine="true"
                android:text="darko andreev"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp" />

            <com.ganbook.ui.AutoResizeTextView
                android:id="@+id/gan_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drawer_email"
                android:layout_alignStart="@+id/drawer_type"
                android:layout_alignLeft="@+id/drawer_type"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:singleLine="true"
                android:text="school code"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp" />

            <com.ganbook.ui.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/logoImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/teacher_profile_image" />

        </RelativeLayout>



        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#DFDEE3"
        	android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbarAlwaysDrawVerticalTrack="true" >
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/drawerRefreshwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ListView
                android:id="@+id/drawer_childlistView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#DFDEE3"
                android:choiceMode="singleChoice"
                android:dividerHeight="0.5pt"
                android:scrollbars="none" >
            </ListView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </ScrollView>


        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="false"
            app:cardBackgroundColor="#C5C4C9"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="bottom">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/settings_sidebar"
                    android:layout_width="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:src="@drawable/icons8_settings_40" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textColor="#2E2E30"
                        android:layout_below="@+id/settings_sidebar"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">>

                <ImageView
                    android:id="@+id/invite_parents_sidebar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:src="@drawable/icons8_invite_40" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sidebar_invite_text"
                        android:textColor="#2E2E30"
                        android:layout_below="@+id/invite_parents_sidebar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_kid_layout"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/add_kid_sidebar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icons8_add_40" />
                    <TextView
                        android:id="@+id/add_kid_sidebar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2E2E30"
                        android:elevation="5dp"
                        android:layout_below="@+id/add_kid_sidebar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/favorites_sidebar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icons8_favorites_40" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorites"
                        android:textColor="#2E2E30"
                        android:elevation="5dp"
                        android:layout_below="@+id/favorites_sidebar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/assign_pta_sidebar_layout"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/assign_pta_sidebar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icons8_sms_40" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PTA"
                        android:textColor="#2E2E30"
                        android:elevation="5dp"
                        android:layout_below="@+id/assign_pta_sidebar"/>
                </RelativeLayout>

            </GridLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>
</FrameLayout>

