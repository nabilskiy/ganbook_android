<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstLayout"
    android:orientation="vertical"
    android:layout_marginTop="-60dp"
    android:layout_width="wrap_content"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/create_drawing_dialog_bg"
        android:layout_height="450dp">

        <TextView
            android:id="@+id/createDrawingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Do you want to create drawing album?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/drawingNameText"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/dialog_edittext_style"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_below="@id/createDrawingText"
            android:hint="@string/drawing_album_name_placeholder" />

        <Button
            android:id="@+id/dialogYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:layout_marginBottom="130dp"
            android:background="@drawable/dialog_button_style"
            android:text="@string/yes" />

        <Button
            android:id="@+id/dialogNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/dialog_button_style"
            android:text="@string/no"
            android:textColor="@color/white" />
    </RelativeLayout>

    <com.ganbook.ui.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawing_circle_top"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/draw_header_icon"
        app:border_color="@android:color/white"
        app:border_width="8dp" />
</RelativeLayout>


