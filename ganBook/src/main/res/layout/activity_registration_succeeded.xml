<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<include layout="@layout/app_bar_layout"
		android:id="@id/app_bar" />

    <TextView
        android:id="@+id/welcome_text1"
        android:layout_width="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="@string/welcome_text_line1"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/welcome_text2"
        android:layout_below="@+id/welcome_text1"
        android:layout_marginTop="11dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="@string/welcome_text_line2"
        android:textSize="17sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/welcome_text3"
        android:layout_below="@+id/welcome_text2"
        android:layout_marginTop="14dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="@string/welcome_text_line3"
        android:textSize="14sp"
        android:textColor="@android:color/black" />
    
    
    <Button
        android:id="@+id/add_kid_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/welcome_text3"
        android:layout_centerInParent="true"
        android:layout_marginTop="55dp" 
        android:background="@drawable/green_selector"
        android:text="@string/add_kid_btn"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />
    
    <TextView
	    android:id="@+id/log_out_link"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/add_kid_btn"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="50dp"
	    android:linksClickable="true"/>

</RelativeLayout>