<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="drawing"
            type="com.ganbook.models.DrawingAnswer" />


        <variable
            name="selection"
            type="boolean" />

    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/drawing_single_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        style="?android:attr/progressBarPadding"
        android:id="@+id/upload_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular"
        android:layout_gravity="center"
        android:max="100"
        android:layout_centerInParent="true"
        android:secondaryProgress="100" />

    <CheckBox
        android:id="@+id/selection_check"
        android:visibility="@{selection ? 0 : 8}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:checked="@{drawing.selected}"
        android:button="@drawable/selection_check_selector" />

</RelativeLayout>
</layout>