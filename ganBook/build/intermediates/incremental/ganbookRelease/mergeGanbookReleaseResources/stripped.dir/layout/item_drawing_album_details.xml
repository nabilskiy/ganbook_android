    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"  android:tag="layout/item_drawing_album_details_0" xmlns:bind="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/drawing_single_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        style="?android:attr/progressBarPadding"
        android:id="@+id/upload_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular"
        android:layout_gravity="center"
        android:max="100"
        android:layout_centerInParent="true"
        android:secondaryProgress="100" />

    <CheckBox
        android:id="@+id/selection_check"
        android:tag="binding_1"                  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
                                             
        android:button="@drawable/selection_check_selector" />

</RelativeLayout>
         