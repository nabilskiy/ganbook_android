        android:id="@+id/parent_album_layout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical" android:tag="layout/item_album_list_0" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/album_off"
            android:tag="binding_1"  />

        <ImageView
            android:id="@+id/heart_active_center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/heart_active" />

        <ImageView
            android:tag="binding_2"                      
            android:id="@+id/new_image"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/new_ribbon" />

        <RelativeLayout
            android:tag="binding_3"                      
            android:id="@+id/notify_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:id="@+id/num_new_image"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/number_ribbon" />

            <TextView
                android:id="@+id/num_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:tag="binding_4"                             
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/single_image_menu"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/album_details_layout"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:tag="binding_5"          
                android:singleLine="true"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/album_details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/album_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:tag="binding_6"                                            
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:tag="binding_7"                            
                    android:id="@+id/num_pics_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dot"/>

                <TextView
                    android:tag="binding_8"                            
                    android:id="@+id/num_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                                                 
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:tag="binding_9"                               
                    android:id="@+id/num_videos_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dot"/>


                <TextView
                    android:id="@+id/num_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:tag="binding_10"     
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_likes_icons"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_above="@+id/album_title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="-21dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/comments_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/num_comments"
                        android:src="@drawable/comments" />

                    <TextView
                        android:id="@+id/num_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:tag="binding_11"                             
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/likes_image_base"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/base" />

                        <ViewSwitcher
                            android:id="@+id/switcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:inAnimation="@anim/fadein_like"
                            android:outAnimation="@anim/fadeout_like">

                            <ImageView
                                android:id="@+id/heart_inactive"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/heart_inactive"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/heart_active"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/heart_active"
                                android:visibility="gone" />
                        </ViewSwitcher>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/num_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:tag="binding_12"                          
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/description_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/num_comments"
                        android:src="@drawable/description" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/views_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/eye"/>

        <TextView
            android:id="@+id/num_views_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@+id/views_image"
            android:layout_marginLeft="5dp"
            android:tag="binding_13"                          
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </RelativeLayout>
         