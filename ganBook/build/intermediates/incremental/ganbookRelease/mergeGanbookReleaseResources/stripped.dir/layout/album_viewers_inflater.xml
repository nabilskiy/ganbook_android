<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.ganbook.ui.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/albumViewerImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_pic_default"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp">

    </com.ganbook.ui.CircleImageView>

    <TextView
        android:id="@+id/albumViewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="25dp"
        android:text="DARKO ANDREEV"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="104dp" />
</RelativeLayout>