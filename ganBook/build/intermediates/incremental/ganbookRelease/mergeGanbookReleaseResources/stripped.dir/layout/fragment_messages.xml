        

    

                 
                              
                             

           

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/apparent_white"
        android:clickable="true"
        android:orientation="vertical"
        tools:context="com.ganbook.fragments.tabs.MessagesFragment" android:tag="layout/fragment_messages_0">

        <FrameLayout
            android:id="@+id/messagesFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <TextView
                android:tag="binding_1"                    
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"
                android:text="@string/empty_messages_list"/>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/messages_refresher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/messages_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/send_msg_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:orientation="vertical"
            android:layout_weight="0.05">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/sendMessageEditText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/edit_bg"
                android:hint="Type a message"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="10"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/attachment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toEndOf="@+id/sendMessageEditText"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_attachment" />

            <TextView
                android:id="@+id/sendMessageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/attachment"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="Send"
                />

<!--            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/type_message"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />-->
        </RelativeLayout>


    </LinearLayout>
         